<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/player_background" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Назад"
            android:src="@drawable/ic_back_arrow_24"
            android:tint="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/artworkImageView"
            android:layout_width="312dp"
            android:layout_height="312dp"
            android:layout_marginTop="82dp"
            android:scaleType="centerCrop"
            android:background="@drawable/album_background"
            android:contentDescription="Обложка альбома"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="312dp"
            android:layout_height="26dp"
            android:layout_marginTop="418dp"
            android:text="Название трека"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artistNameTextView"
            android:layout_width="312dp"
            android:layout_height="16dp"
            android:layout_marginTop="456dp"
            android:text="Исполнитель"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="502dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Воспроизведение/Пауза"
            android:src="@drawable/ic_play_light_84"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/addToPlaylistButton"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="526dp"
            android:background="@drawable/round_button_background"
            android:contentDescription="Добавить в плейлист"
            android:src="@drawable/ic_add_to_playlist_light_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="526dp"
            android:background="@drawable/round_button_background"
            android:contentDescription="Добавить в избранное"
            android:src="@drawable/ic_favorite_51"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trackDurationTextView"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="606dp"
            android:text="00:00"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/trackInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="652dp"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/durationLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Длительность"
                    android:textColor="#AEAFB4"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="start|center_vertical" />

                <TextView
                    android:id="@+id/durationValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="03:45"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/albumLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/albumLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Альбом"
                    android:textColor="#AEAFB4"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="start|center_vertical" />

                <TextView
                    android:id="@+id/albumValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Название альбома"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yearLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/yearLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Год"
                    android:textColor="#AEAFB4"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="start|center_vertical" />

                <TextView
                    android:id="@+id/yearValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2023"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/genreLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/genreLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Жанр"
                    android:textColor="#AEAFB4"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="start|center_vertical" />

                <TextView
                    android:id="@+id/genreValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Поп"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/countryLayout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/countryLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Страна"
                    android:textColor="#AEAFB4"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="start|center_vertical" />

                <TextView
                    android:id="@+id/countryValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="USA"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="13sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="end|center_vertical" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>