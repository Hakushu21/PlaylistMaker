<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/search_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16"
        android:paddingEnd="@dimen/spacing_16">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_24"
            android:layout_marginEnd="@dimen/spacing_16"
            android:tint="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="22sp"
            android:textStyle="normal"
            android:textColor="?android:attr/textColorPrimary" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/search_field_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_hint"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/search_text"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:imeOptions="actionSearch"
                android:textColorHint="@color/search_hint" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search_24"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="12dp"
                android:tint="@color/search_icon" />

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clear_24"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:tint="@color/search_clear_icon"
                android:visibility="gone"
                android:contentDescription="@string/clear_search" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Здесь появятся результаты поиска"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:visibility="visible" />

</LinearLayout>