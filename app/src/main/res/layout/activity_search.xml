<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/search_background">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spacing_16"
        android:paddingEnd="@dimen/spacing_16">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_24"
            android:layout_marginEnd="@dimen/spacing_16"
            android:tint="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="22sp"
            android:textStyle="normal"
            android:textColor="?android:attr/textColorPrimary" />

    </LinearLayout>

    <!-- Поле поиска -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/search_field_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_hint"
                android:maxLines="1"
                android:inputType="text"
                android:textColor="@color/search_text"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColorHint="@color/search_hint" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search_24"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="12dp"
                android:tint="@color/search_icon" />

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clear_24"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:tint="@color/search_clear_icon"
                android:visibility="gone"
                android:contentDescription="@string/clear_search" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Контейнер для всех состояний -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Прогресс бар -->
        <ProgressBar
            android:id="@+id/loading_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Сообщение "ничего не найдено" -->
        <LinearLayout
            android:id="@+id/nothing_found_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="210dp"
            android:visibility="gone"
            android:background="@color/search_background">

            <ImageView
                android:id="@+id/nothing_found_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/nothing_found"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/nothing_found_text"
                android:layout_width="312dp"
                android:layout_height="20dp"
                android:text="@string/nothing_found"
                android:textSize="19sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <!-- Сообщение об ошибке -->
        <LinearLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="210dp"
            android:visibility="gone"
            android:background="@color/search_background">

            <ImageView
                android:id="@+id/error_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/connection_error"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/error_message"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:text="@string/connection_error"
                android:textSize="19sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:lineSpacingExtra="8dp"
                android:layout_gravity="center_horizontal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_button"
                style="@style/RetryButtonStyle"
                android:text="@string/retry"
                android:layout_marginTop="32dp" />

        </LinearLayout>

        <!-- Список результатов поиска -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- История поиска -->
        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/history_title"
                android:layout_width="360dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/search_history_title"
                android:textSize="19sp"
                android:textStyle="normal"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:lineHeight="52dp"
                android:textColor="@color/history_title_text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <!-- RecyclerView для истории с кнопкой очистки внутри -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="8dp" />

        </LinearLayout>

        <!-- Начальное сообщение -->
        <LinearLayout
            android:id="@+id/start_search_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/start_search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_search"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center"
                android:padding="16dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>